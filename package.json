{
  "name": "mr-wplace",
  "version": "1.10.0",
  "license": "MPL-2.0",
  "scripts": {
    "build": "esbuild src/content.ts src/popup.ts src/inject.ts --bundle --outdir=dist --minify --target=chrome88 --alias:@=./src",
    "copy-assets": "cp -r public/* .",
    "dev": "npm run copy-assets && npm run build -- --watch",
    "manifest:chrome": "node ./scripts/generate-manifest.js chrome",
    "manifest:firefox": "node ./scripts/generate-manifest.js firefox",
    "build:chrome": "npm run manifest:chrome && npm run build",
    "build:firefox": "npm run manifest:firefox && npm run build",
    "build:release": "bash ./scripts/build-release.sh",
    "bump:major": "node ./scripts/bump-version.js major",
    "bump:minor": "node ./scripts/bump-version.js minor",
    "bump:patch": "node ./scripts/bump-version.js patch",
    "test:chrome": "bun run playwright test --headed --project=chromium",
    "test:firefox": "bun run playwright test --headed --project=firefox",
    "test:safari": "bun run playwright test --headed --project=webkit"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/chrome": "^0.1.4",
    "@types/jszip": "^3.4.1",
    "@types/node": "^24.9.1",
    "esbuild": "^0.19.0"
  },
  "dependencies": {
    "jszip": "^3.10.1"
  }
}
