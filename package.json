{
  "name": "mr-wplace",
  "version": "1.5.2",
  "license": "MPL-2.0",
  "scripts": {
    "build": "esbuild src/content.ts src/popup.ts --bundle --outdir=dist --minify --target=chrome88",
    "copy-assets": "cp -r public/* .",
    "dev": "npm run copy-assets && npm run build -- --watch",
    "build:release": "bash ./scripts/build-release.sh",
    "bump:major": "node ./scripts/bump-version.js major",
    "bump:minor": "node ./scripts/bump-version.js minor",
    "bump:patch": "node ./scripts/bump-version.js patch"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.4",
    "esbuild": "^0.19.0"
  }
}
