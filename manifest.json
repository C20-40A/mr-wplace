{
  "manifest_version": 3,
  "name": "WPlace Studio",
  "version": "1.0.0",
  "description": "Professional toolkit for WPlace - Enhance your creative workflow with advanced features and protection tools",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.wplace.live/*"
  ],
  "action": {
    "default_title": "WPlace Studio",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.wplace.live/*"
      ],
      "js": [
        "dist/content.js"
      ],
      "css": [
        "styles/content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles/*",
        "icons/*"
      ],
      "matches": [
        "*://*.wplace.live/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}